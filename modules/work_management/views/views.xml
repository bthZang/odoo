<?xml version="1.0"?>
<odoo>

    <menuitem id="human_resource_work_menu_root" name="Work Management">
        <menuitem id="human_resource_work_home" name="Home">
            <menuitem id="human_resource_work_list" action="human_resource_work_list_view_action"/>
        </menuitem>
    </menuitem>

    <record id="human_resource_work_list_view_action" model="ir.actions.act_window">
        <field name="name">Work list</field>
        <field name="res_model">human_resource.work</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Bạn không có công việc nào
            </p>
        </field>
    </record>

    <record id="work_list_search" model="ir.ui.view">
        <field name="name">human_resource.work.search</field>
        <field name="model">human_resource.work</field>
    </record>

    <record id="work_list_view" model="ir.ui.view">
        <field name="name">human_resource.work.tree</field>
        <field name="model">human_resource.work</field>
        <field name="arch" type="xml">
            <tree string="Danh sách công việc">
                <field name="title"/>
                <field name="phone"/>
                <field name="state"/>
                <field name="deadline"/>
                <field name="reviewer"/>
            </tree>
        </field>
    </record>

