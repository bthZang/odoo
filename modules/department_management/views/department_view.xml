<?xml version="1.0"?>
<odoo>

    <record id="department_management.action_window" model="ir.actions.act_window">
        <field name="name">Department management</field>
        <field name="res_model">human_resource.department</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new department
            </p>
        </field>
    </record>

    <menuitem name="Department" id="department_management.menu_root"/>

    <menuitem name="Home" id="department_management.menu_1" parent="department_management.menu_root"/>

    <menuitem name="List" id="department_management.menu_1_list" parent="department_management.menu_1"
              action="department_management.action_window"/>


    <record id="department_list_view" model="ir.ui.view">
        <field name="name">human_resource.department.tree</field>
        <field name="model">human_resource.department</field>
        <field name="arch" type="xml">
            <tree string="Danh sÃ¡ch phÃ²ng ban">
                <field name="name"/>
                <field name="description"/>
                <field name="total_employee"/>
            </tree>
        </field>
    </record>

    <record id="crm_lost_reason_view_form" model="ir.ui.view">
        <field name="name">human_resource.department.form</field>
        <field name="model">human_resource.department</field>
        <field name="arch" type="xml">
            <form string="Lost Reason">
                <sheet>
                    <h1 class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <field name="name" class=""/>
                    </h1>
                    <group>
                        <field name="total_employee" editable="0" />
                        <field name="manager" />
                    </group>
                    <div class="oe_edit_only">
                        <label for="description"/>
                    </div>
                    <textarea>
                        <field name="description" class="mb16"/>
                    </textarea>
<!--                    <field name="staffs" widget="one2many_list">-->
<!--                        <tree>-->
<!--                            <field name="name"/>-->
<!--                            <field name="email"/>-->
<!--                        </tree>-->
<!--                    </field>-->
                </sheet>
            </form>
        </field>
    </record>
</odoo>